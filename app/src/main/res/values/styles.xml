<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#039BE5</item>
        <item name="colorPrimaryDark">#0277BD</item>
        <item name="colorAccent">#29B6F6</item>
    </style>

    <style name="AppTheme.Splashscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bg_main</item>
        <item name="colorPrimaryDark">@color/bg_main</item>
        <item name="colorAccent">@color/bg_main</item>
    </style>

    <style name="AppTheme.Edit" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/input_login_hint</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#484848</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/md_black_1000</item>
        <item name="android:textColorPrimary">@color/dark_blue</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme_Dark_Dialog" parent="ThemeOverlay.AppCompat.Dialog" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

        <style name="AppTheme.Toolbar">
            <item name="toolbarStyle">@style/Widget.Toolbar</item>
            <item name="toolbarNavigationButtonStyle">@style/Widget.Toolbar.Button.Navigation</item>
        </style>
    <style name="Widget" parent="android:Widget"/>
    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>
    <style name="Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">20dip</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:maxWidth">20dip</item>
        <item name="android:padding">0dip</item>
    </style>
    <style name="AppTheme.TransNav" parent="AppTheme">
        <item name="android:minWidth">20dip</item>
        <item name="android:maxWidth">20dip</item>
        <item name="android:padding">0dip</item>
    </style>
</resources>
